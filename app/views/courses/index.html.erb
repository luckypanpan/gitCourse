<p id="notice"><%= notice %></p>

<h1>Courses</h1>

<table>
  <thead>
    <tr>
      <th>Coursename</th>
      <th>Period</th>
      <th>Credit</th>
      <th>Degreecourse</th>
      <th>Examtype</th>
      <th>Teacher</th>
      <th>Classplace</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.coursename %></td>
        <td><%= course.period %></td>
        <td><%= course.credit %></td>
        <td><%= course.degreecourse %></td>
        <td><%= course.examtype %></td>
        <td><%= course.teacher %></td>
        <td><%= course.classplace %></td>
        <td><%= link_to 'Show', course %></td>
        <td><%= link_to 'Edit', edit_course_path(course) %></td>
        <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

